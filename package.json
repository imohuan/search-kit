{
  "name": "vite8-vue-oxc",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview --host",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "lint:desc": "------- 快速 Linting: 检查 src 目录",
    "lint": "oxlint src",
    "format:desc": "------- 格式化: 修复 src 目录中的格式问题",
    "format": "oxfmt src",
    "lint:format:desc": "------- 综合检查: 先执行 linting，然后检查格式是否符合规范",
    "lint:format": "oxlint src && oxfmt src",
    "ci:desc": "------- 完整 CI 流程",
    "ci": "npm run lint:format && npm run build"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "@vicons/material": "^0.13.0",
    "@vueuse/core": "^14.1.0",
    "dexie": "^4.2.1",
    "lodash-es": "^4.17.21",
    "mammoth": "^1.11.0",
    "mitt": "^3.0.1",
    "oxfmt": "^0.16.0",
    "oxlint": "^1.31.0",
    "pdfjs-dist": "^5.4.530",
    "pinia": "^3.0.4",
    "tailwindcss": "^4.1.17",
    "vfonts": "^0.0.3",
    "vue": "^3.5.24",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^4.0.17",
    "@vue/tsconfig": "^0.8.1",
    "fake-indexeddb": "^6.2.5",
    "fast-check": "^4.5.3",
    "jsdom": "^27.4.0",
    "typescript": "~5.9.3",
    "vite": "8.0.0-beta.0",
    "vitest": "^4.0.17",
    "vue-tsc": "^3.1.4"
  },
  "pnpm": {
    "overrides": {
      "vite": "8.0.0-beta.0"
    }
  }
}
